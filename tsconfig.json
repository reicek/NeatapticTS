{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "ESNext",
    "target": "ES6",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node" // Added this line to fix the error
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
